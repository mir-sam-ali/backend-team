<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Head Login</title>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>    
    <div style="position: fixed; right: 0; top:0; padding: 10px; display: inline-block; text-align: left;  vertical-align: top;">

    <form method="GET"  action="/editor" style="float: left; margin-right: 20px;">
        <button type="submit" class='btn btn-outline-success pull-right'>Login as Blog Editor</button> 
    </form>

    <form method="GET"  action="/admin" style="float: left; " >
        <button type="submit" class='btn btn-outline-danger pull-right'>Login as Admin</button> 
    </form>

    </div>
    <style>
        body {
    background: #222D32;
    font-family: 'Roboto', sans-serif;
    }

    .login-box {
        margin-top: 75px;
        height: auto;
        background: #1A2226;
        text-align: center;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
    }

    .login-title {
        margin-top: 15px;
        text-align: center;
        font-size: 30px;
        letter-spacing: 2px;
        margin-bottom: 15px;
        font-weight: bold;
        color: #ECF0F5;
    }
    label{
        margin-top: 5px;
        float: left;
        color: lightgray;
        font-size: small;
    }


    .form-group {
        margin-bottom: 20px;
        outline: 0px;
    }


    .login-text {
        text-align: left;
        padding-left: 0px;
        color: #A2A4A4;
    }
    .btn.btn-primary[type=submit]{
        margin: 20px;
    }
    </style>

    <!-- Switch to admin login so that there is only fall through from higher access requests -->

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12">
                    <img src="/images/logo.png" alt="logo" class="rounded" style=" margin-top:20px; max-height: 100px;">
                </div>
                <div class="col-lg-12 login-title">
                    Club Head Login
                </div>

                <div class="col-lg-12 login-form">
                    <div class="col-lg-12 login-form">
                        <form method="POST" action="/club_head/login" >
                            <div class="form-group">
                                <label for="username">User Name</label>
                                <input type="text" class="form-control" id="username" name="user_id" onkeypress="return noSpace(event)" required>
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="pswd" onkeypress="return noSpace(event)" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    <script>
    //client side rejection of whitespace
    function noSpace(event) {
        var key = event ? event.which : window.event.keyCode;
        if (key == 32) return false;
    }
    </script>
</body>
</html>